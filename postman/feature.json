					"    }",
					"",
					"    async publishComment(eventId, commentId, verbose=null) {",
					"        return this.patch(`/admin/events/${eventId}/comments/${commentId}`, { status: \"PUBLISHED\" }, \"Ошибка при добавлении нового комментария\", verbose);",
					"    }",
					"",
					"    async getCommentsByEventId(eventId, queryStr = \"?from=0\", verbose=null) {",
					"        return this.get(`/events/${eventId}/comments${queryStr}`, null, \"Ошибка при получении комментариев\", verbose);",
					"    }",
