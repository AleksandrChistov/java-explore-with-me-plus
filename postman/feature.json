			"name": "Public - Получение комментариев по списку eventIds (только PUBLISHED)",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const main = async () => {",
							"    const api = new API(pm);",
							"    const rnd = new RandomUtils();",
							"",
							"    try {",
							"        const user = await api.addUser(rnd.getUser());",
							"        const category = await api.addCategory(rnd.getCategory());",
							"",
							"        // Create and publish first event",
							"        let event1 = await api.addEvent(user.id, rnd.getEvent(category.id));",
							"        event1 = await api.publishEvent(event1.id);",
							"",
							"        // Create and publish second event",
							"        let event2 = await api.addEvent(user.id, rnd.getEvent(category.id));",
							"        event2 = await api.publishEvent(event2.id);",
							"",
							"        pm.collectionVariables.set(\"eventIds\", `${event1.id},${event2.id}`);",
							"",
							"        // Add some comments to test pagination",
							"        const commentPromises1 = [];",
							"        const commentPromises2 = [];",
							"",
							"        for (let i = 0; i < 10; i++) {",
							"            const comment1 = (async () => {",
							"                return await api.addComment(user.id, event1.id, rnd.getWord(50));",
							"            })();",
							"            commentPromises1.push(comment1);",
							"            const comment2 = (async () => {",
							"                return await api.addComment(user.id, event2.id, rnd.getWord(50));",
							"            })();",
							"            commentPromises2.push(comment2);",
							"        }",
							"",
							"        await Promise.all([...commentPromises1, ...commentPromises2]).then(comments => {",
							"            const publishedPromises1 = [];",
							"            const publishedPromises2 = [];",
							"",
							"            for (let i = 0; i < 10; i++) {",
							"                const comment1 = comments[i];",
							"                const published1 = (async () => {",
							"                    return await api.publishComment(event1.id, comment1.id).catch(err => 1);",
							"                })();",
							"                publishedPromises1.push(published1);",
							"            }",
							"",
							"            for (let i = 10; i < 20; i++) {",
							"                const comment2 = comments[i];",
							"                const published2 = (async () => {",
							"                    return await api.publishComment(event2.id, comment2.id).catch(err => 1);",
							"                })();",
							"                publishedPromises1.push(published2);",
							"            }",
							"",
							"            return Promise.all([...publishedPromises1, ...publishedPromises2]).then(async () => {",
							"                console.log(\"All comments created and updated successfully\");",
							"                console.log(\"All comments created and updated successfully\");",
							"                const comments = await api.getComments(`?eventIds=${event1.id},${event2.id}&from=0`);",
							"                pm.collectionVariables.set('source', comments);",
							"            });",
							"        });",
							"",
							"",
							"    } catch (err) {",
							"        console.error(\"Ошибка при подготовке тестовых данных.\", err);",
							"        throw err;",
							"    }",
