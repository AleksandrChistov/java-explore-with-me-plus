							"",
							"(async () => {",
							"    try {",
							"        await main();",
							"        console.log(\"Test data preparation completed successfully\");",
							"    } catch (error) {",
							"        console.error(\"Test data preparation failed:\", error);",
							"    }",
							"})();"
